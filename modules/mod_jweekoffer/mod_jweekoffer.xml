<?xml version="1.0" encoding="utf-8"?><extension type="module" version="3.0" client="site" method="upgrade">	<name>JWeekOffer</name>	<creationDate>August 2013</creationDate>	<author>CMSJunkie</author>	<copyright>(C) CMSJunkie. All rights reserved.</copyright>	<license>http://www.gnu.org/copyleft/gpl.html</license>	<authorEmail>info@cmsjunkie.com</authorEmail>	<authorUrl>www.cmsjunkie.com</authorUrl>	<version>1.0.0</version>	<description>JHotelreservation - Top Offers</description>	<files>		<filename>mod_jweekoffer.xml</filename>		<filename module="mod_jweekoffer">mod_jweekoffer.php</filename>		<filename>index.html</filename>		<filename>helper.php</filename>		<filename>tmpl/default.php</filename>		<filename>tmpl/index.html</filename>		<folder>assets</folder>	</files>	<config>		<fields name="params">			<fieldset name="basic">				<field name="title" type="text" default="" label="Offer Title"					description="Title of offer - will be displayed in offer. If blank, offer title will be displayed">				</field>				<field name="offerId" type="text" default="" label="Offer Id"					description="Id of offer">				</field>				<field name="price" type="text" default="" label="Price"					description="Price of the offer">				</field>				<field name="offerIntro" type="textarea" default="" label="Offer intro"					description="Offer intro" rows="10" cols="80" filter="raw">				</field>				<field name="offerDescription" type="textarea" default="" label="Offer description"					description="Offer description" rows="10" cols="80" filter="raw">				</field>				<field name="offerContent" type="textarea" default="" label="Offer content"					description="Offer content" rows="10" cols="80" filter="raw">				</field>			</fieldset>			<fieldset				name="advanced">				<field					name="layout"					type="modulelayout"					label="JFIELD_ALT_LAYOUT_LABEL"					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />				<field					name="moduleclass_sfx"					type="text"					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />				<field					name="cache"					type="list"					default="1"					label="COM_MODULES_FIELD_CACHING_LABEL"					description="COM_MODULES_FIELD_CACHING_DESC">					<option						value="1">JGLOBAL_USE_GLOBAL</option>					<option						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>				</field>				<field					name="cache_time"					type="text"					default="900"					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />			</fieldset>		</fields>	</config></extension>