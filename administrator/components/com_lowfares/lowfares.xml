            <folder>js</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages folder="admin">
            <language tag="es-ES">languages/es-ES/es-ES.com_lowfares.ini</language>
            <language tag="es-ES">languages/es-ES/es-ES.com_lowfares.sys.ini</language>
            <language tag="en-GB">languages/en-GB/en-GB.com_lowfares.ini</language>
            <language tag="en-GB">languages/en-GB/en-GB.com_lowfares.sys.ini</language>
        </languages>
