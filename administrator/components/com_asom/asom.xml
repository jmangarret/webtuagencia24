<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
    <name>ASOM</name>
    <author>Amadeus IT Group S.A.S</author>
    <creationDate>December 2012</creationDate>
    <copyright>(C) 2012</copyright>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <license></license>
    <description>AOM_DESCRIPTION</description>
    <installfile>install.asom.php</installfile>
    <uninstallfile>uninstall.asom.php</uninstallfile>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>asom.php</filename>
        <filename>index.html</filename>
        <filename>metadata.xml</filename>
        <filename>router.php</filename>

        <folder>controllers</folder>
        <folder>css</folder>
        <folder>helpers</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <languages folder="site/languages">
        <language tag="es-ES">es-ES.com_asom.ini</language>
        <language tag="en-GB">en-GB.com_asom.ini</language>
    </languages>

    <administration>
        <menu>COM_ASOM</menu>
        <files folder="admin">
            <filename>asom.php</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>install.asom.php</filename>
            <filename>uninstall.asom.php</filename>

            <folder>controllers</folder>
            <folder>css</folder>
            <folder>images</folder>
            <folder>js</folder>
            <folder>library</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages folder="admin/languages">
            <language tag="es-ES">es-ES.com_asom.ini</language>
            <language tag="es-ES">es-ES.com_asom.sys.ini</language>
            <language tag="en-GB">en-GB.com_asom.ini</language>
            <language tag="en-GB">en-GB.com_asom.sys.ini</language>
        </languages>
    </administration>
</install>
